 <%= devise_error_messages! %>
<div class="containter"></div>
  <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title" style="font-weight: bold; padding-top: 1.7%;">Sign in as user</div>
                        <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#"><%= link_to "Forgot your password?", new_password_path(resource_name) %><br /></a></div>
                    </div>     

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <form id="loginform" class="form-horizontal" role="form">
                            <div style="margin-bottom: 25px" class="input-group">
                              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                              <%= f.text_field :email, autofocus: true, autocomplete: "email", id: "login-username", class:"form-control", placeholder: "email" %>
                            </div>
                            
                             
                            <div style="margin-bottom: 25px" class="input-group">
                                  <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                  <%= f.password_field :password, autocomplete: "off", id: "login-password", class: "form-control", placeholder: "password"%>
                            </div>
                            

                              


                                <div style="margin-top:10px" class="form-group">
                                    <!-- Button -->
                                      
                                        <%= f.submit "Sign in", class: "btn btn-primary" %>
                                    
                                   
                                </div>


                                <div class="form-group">
                                    <div class="col-md-12 control">
                                        <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                                            <div style="float: left;">
                                               Dont have an account! 
                                               <%= link_to "Sign up here", new_user_registration_path %><br />
                                            </div>
                                            <div style="float: right;">
                                                <%= link_to "Sign in as customer!",  customer_session_path %>
                                            </div>
                                        </div>
                                    </div>
                                </div>    
                            </form>  
                            <%end%>



                        </div>                     
                    </div>  
        </div>
        
</div>















