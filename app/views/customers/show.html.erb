<h1>my profile</h1>

<style>
  body {
  background: #F1F3FA;
}

</style>
<div class="container">
    <div class="row profile">
		<div class="col-md-3">
			<div class="profile-sidebar">
				<!-- SIDEBAR USERPIC -->
				<div class="profile-userpic">
					<img src="http://keenthemes.com/preview/metronic/theme/assets/admin/pages/media/profile/profile_user.jpg" class="img-responsive" alt="">
				</div>
				<!-- END SIDEBAR USERPIC -->
				<!-- SIDEBAR USER TITLE -->
				<div class="profile-usertitle">
					<div class="profile-usertitle-name">
						<%= @customer.email %>
					</div>
					<div class="profile-usertitle-job">
						<%= user_signed_in? ? "User" : "Customer" %>
					</div>
				</div>
				<!-- END SIDEBAR USER TITLE -->
				<!-- SIDEBAR BUTTONS -->
				<!-- END SIDEBAR BUTTONS -->
				<!-- SIDEBAR MENU -->
				<div class="profile-usermenu">
					<ul style="color:#4d4dff" class="nav">
						<li style="padding-left: 5%" class="active">
							
							Name:
							<%= @customer.name %><br>
						</li>
						<li style="padding-left: 5%">
							Last name: 
							<%= @customer.last_name %> 
						</li>
						<li style="padding-left: 5%">
							Country: 
							<%= @customer.country %> 
						</li>
						<li style="padding-left: 5%">
							City: 
							<%= @customer.city %> 
						</li>
						<li style="padding-left: 5%">
							Addres: 
							<%= @customer.addres %> 
						</li>
						<li style="padding-left: 5%">
							Phone number: 
							<%= @customer.phone_number %> 
						</li>
						<li style="padding-left: 5%">
							Second email: 
							<%= @customer.second_email %> 
						</li>
						<li style="padding-left: 5%">
							Fax: 
							<%= @customer.fax %> 
						</li>
						<li style="padding-left: 5%">
							Second phone number: 
							<%= @customer.second_phone_number %> 
						</li>
					</ul>
				</div>
				<!-- END MENU -->
			</div>
		</div>
		<div class="col-md-9">
            <div class="profile-content">
			   Some user related content goes here...
            </div>
		</div>
	</div>
</div>